            <link rel="stylesheet" href="master.css">
            <style type="text/css">
                *
                {
                    margin:0;
                    padding:0;
                    box-sizing: border-box;
                    font-family:'poppins', sans-serif;
                    scroll-behavior:smooth;
                    
                }
                body
                {
                    min-height:100vh;
                    background: linear-gradient(#2b1055,#7597de);
                    
                }
                h2
                {
                    position:relative;
                    display:flex;
                    top:150px;
                    justify-content:center;
                    align-items:center;
                    color:white;
                    font-size:60px;
                }
                header
